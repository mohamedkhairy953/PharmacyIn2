<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#d0ece0"
    tools:context="com.example.moham.navdrawerexample1.SignUp.Information_Field_fragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#bddfd0"
        >

        <ImageView
            android:id="@+id/img_view_infField"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_margin="15dp"
            android:src="@drawable/unknown"
            android:contentDescription="photo of you" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:text="@string/press_on_imageview"
            android:textSize="20sp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="#c0ded0"
        >

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/first_name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edittextFirstname"
                android:layout_width="240dp"
                android:background="@color/colorWhite"
                android:hint="  Your First Name"
                />
        </TableRow>

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/last_name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edittextlastname"
                android:layout_width="240dp"
                android:background="@color/colorWhite"
                android:hint="  Your Last Name"
                />
        </TableRow>

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/user_name"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edittextusername"
                android:layout_width="240dp"
                android:background="@color/colorWhite"
                android:hint="  Your User Name"
                />
        </TableRow>

        <TableRow android:layout_marginBottom="20dp">

            <TextView
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:text="@string/phone"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edittextphone"
                android:layout_width="240dp"
                android:inputType="phone"
                android:background="@color/colorWhite"
                android:hint="  Your Phone Number"
                />
        </TableRow>


    </TableLayout>
    <TextView
        android:layout_marginTop="39dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/store_gps_location"
        android:textSize="20sp"
        android:gravity="center"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_and_finish"
        android:id="@+id/saveButtonInfField"
        />

</LinearLayout>
